# =================================================================
# DJANGO SETTINGS - Virtual Tour UNU Yogyakarta
# =================================================================

# Security
# Generate new secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug Mode (True for development, False for production)
DEBUG=True

# Allowed Hosts (comma separated, no spaces)
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Database Type (sqlite, postgresql, mysql)
DB_ENGINE=sqlite

# SQLite Configuration (default for development)
DB_NAME=db.sqlite3

# PostgreSQL Configuration (uncomment for production)
# DB_ENGINE=postgresql
# DB_NAME=unu_virtual_tour
# DB_USER=unu_db_user
# DB_PASSWORD=your-db-password-here
# DB_HOST=localhost
# DB_PORT=5432

# =================================================================
# MEDIA & STATIC FILES
# =================================================================

# Media files URL prefix
MEDIA_URL=/media/

# Static files URL prefix
STATIC_URL=/static/

# =================================================================
# CORS CONFIGURATION
# =================================================================

# CORS Allowed Origins (comma separated, no spaces)
# Add your frontend domains here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5500,http://127.0.0.1:5500,http://localhost:8000,http://127.0.0.1:8000

# Allow all origins (True/False) - ONLY for development
CORS_ALLOW_ALL_ORIGINS=False

# =================================================================
# API CONFIGURATION
# =================================================================

# API Rate Limiting (requests per hour for anonymous users)
API_RATE_LIMIT=1000/hour

# API Versioning
API_VERSION=v1

# =================================================================
# EMAIL CONFIGURATION (Optional - for contact forms, etc)
# =================================================================

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# =================================================================
# THIRD-PARTY SERVICES (Optional)
# =================================================================

# Google Analytics ID
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# =================================================================
# TIMEZONE & LOCALIZATION
# =================================================================

TIME_ZONE=Asia/Jakarta
LANGUAGE_CODE=id-id
USE_I18N=True
USE_TZ=True

# =================================================================
# PERFORMANCE & CACHING
# =================================================================

# Cache backend (dummy, locmem, redis)
CACHE_BACKEND=locmem

# Redis Configuration (if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Session timeout (in seconds, default: 1209600 = 2 weeks)
SESSION_COOKIE_AGE=1209600

# =================================================================
# SECURITY SETTINGS (Production)
# =================================================================

# HTTPS/SSL Settings (set to True in production with SSL)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# HSTS Settings
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
